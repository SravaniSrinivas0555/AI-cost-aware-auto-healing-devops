pipeline {
    agent any

    environment {
        IMAGE_NAME = "cost-aware-app"
        IMAGE_TAG  = "latest"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Docker Test') {
            steps {
                sh 'echo Checking Docker version...'
                sh 'docker --version'
                sh 'echo Listing running containers...'
                sh 'docker ps'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'echo Building Docker image...'
                sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG .'
            }
        }

        stage('Verify Image') {
            steps {
                sh 'echo Listing Docker images...'
                sh 'docker images'
            }
        }

        stage('Run Container (Test)') {
            steps {
                sh '''
                echo Running container...
                docker run -d -p 8081:8080 --name test-container $IMAGE_NAME:$IMAGE_TAG
                '''
            }
        }

        stage('Cleanup') {
            steps {
                sh '''
                echo Cleaning up...
                docker stop test-container || true
                docker rm test-container || true
                '''
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully üöÄ'
        }
        failure {
            echo 'Pipeline failed ‚ùå'
        }
    }
}
